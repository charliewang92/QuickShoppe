<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@color/babyblue"
    tools:context="com.quickshoppe.charlie.quickshoppe.SignUpActivity">

    <TextView android:text="Account Registration" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/registration_text_view"
        android:textColor="@color/abc_input_method_navigation_guard"
        android:textSize="35dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />


    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:id="@+id/registration_first_name"
        android:layout_below="@+id/registration_text_view"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/registration_user_name"
        android:layout_alignEnd="@+id/registration_user_name"
        android:textColorHint="#ffff299f"
        android:hint="First Name" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:id="@+id/registration_last_name"
        android:layout_below="@+id/registration_first_name"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/registration_user_name"
        android:layout_alignEnd="@+id/registration_user_name"
        android:textColorHint="#ffff299f"
        android:hint="Last Name" />


    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/registration_user_name"
        android:hint="Enter You Username"
        android:focusable="true"
        android:textColorHighlight="#ff7eff15"
        android:textColorHint="#ffff25e6"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/registration_last_name" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/registration_password"
        android:layout_below="@+id/registration_user_name"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/registration_user_name"
        android:layout_alignEnd="@+id/registration_user_name"
        android:textColorHint="#ffff299f"
        android:hint="Enter Your Password" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/registration_confirm_password"
        android:layout_below="@+id/registration_password"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/registration_password"
        android:layout_alignEnd="@+id/registration_password"
        android:textColorHint="#ffff299f"
        android:hint="Confirm Your Password" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:id="@+id/registration_advantage_number"
        android:inputType="number"
        android:layout_below="@+id/registration_confirm_password"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/registration_user_name"
        android:layout_alignEnd="@+id/registration_user_name"
        android:textColorHint="#ffff299f"
        android:hint="Enter your Giant Eagle Account Number" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:id="@+id/registration_email"
        android:inputType="textEmailAddress"
        android:layout_below="@+id/registration_advantage_number"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/registration_user_name"
        android:layout_alignEnd="@+id/registration_user_name"
        android:textColorHint="#ffff299f"
        android:hint="Enter your Email" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:id="@+id/registration_credit_card"
        android:inputType="number"
        android:layout_below="@+id/registration_email"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/registration_user_name"
        android:layout_alignEnd="@+id/registration_user_name"
        android:textColorHint="#ffff299f"
        android:hint="Enter your credit card info"/>


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create Account"
        android:id="@+id/create_account"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Return to Home"
        android:id="@+id/return_to_home"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />


</RelativeLayout>
